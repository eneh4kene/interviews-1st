{
  "name": "interview-me",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "cd apps/web && npm run dev",
    "build": "cd apps/web && npm run build",
    "build:packages": "cd packages/types && npm run build && cd ../ui && npm run build",
    "start": "cd apps/web && npm run start",
    "lint": "cd apps/web && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "type-check": "cd apps/web && npm run type-check"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.539.0",
    "nodemailer": "^7.0.6"
  }
}